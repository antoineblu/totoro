---
import type { TransitionAnimationPair } from "astro";
import { ViewTransitions } from "astro:transitions";
import MouseTrail from "../components/MouseTrail.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;

const anim: TransitionAnimationPair = {
	old: {
    name: 'fadeIn',
    duration: '0.5s',
    easing: 'linear',
    fillMode: 'forwards',
  },
  new: {
    name: 'fadeIn',
    duration: '0.3s',
    easing: 'linear',
    fillMode: 'backwards',
  }
}
const myFade = {
  forwards: anim,
  backwards: anim,
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<NavBar />
		<slot />
		<MouseTrail />
	</body>
	<script> import "../scripts/scroll"; </script>
</html>

<style>
	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}

	@keyframes fadeOut {
		from { opacity: 1; }
		to { opacity: 0; }
	}
</style>

<style is:global>
	:root {
		--pastel-main: #bce9ba;
		--main-color: #309130;
	}
	@font-face {
		font-family: "Ghibli";
		src: url("/totoro/fonts/Ghibli.otf") format("opentype");
		font-weight: 400;
		font-style: normal;
	}
	* {
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: Ghibli, sans-serif;
		background-color: var(--main-color);
	}
</style>

